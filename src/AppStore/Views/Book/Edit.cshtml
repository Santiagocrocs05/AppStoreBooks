@model AppStore.Models.Domain.Book
@{}

<form class="w-40" asp-action="Edit" method="post" enctype="multipart/form-data">

    <h2>Actualizar Libro</h2>
    <input type="hidden" class="input" asp-for="Id" >
    <input type="hidden" class="input" asp-for="Imagen" >



    <div class="input-container">
        <label asp-for="Title" class="w-40">Titulo</label>
        <input type="text" class="input" asp-for="Title">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Title"></span>
    </div>

    <div class="input-container">
        <label asp-for="Author" class="w-40">Autor</label>
        <input type="text" class="input" asp-for="Author">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Author"></span>
    </div>

    <div class="input-container">
        <label asp-for="File" class="w-40">Imagen</label>
        <input type="file" class="input" asp-for="File">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="File"></span>
    </div>


    <div class="input-container">
        <label asp-for="Categories" class="w-40">Categorias</label>
        <select asp-items="Model.MulticategoriesList" class="input" asp-for="Categories" multiple>
            <option value="">--Seleccionar--</option>
        </select>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Categories"></span>
    </div>

    <div class="input-container">
        <label asp-for="CreateDate" class="w-40">Fecha Publicacion</label>
        <input type="text" class="input" asp-for="CreateDate">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="CreateDate"></span>
    </div>


    @if(TempData["msg"] != null)
    {
        <div class="alert-mb1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default">Guardar</button>
        <a class="btn btn-sec" href="/Libro/LibroList">Ver Todo</a>
    </div>



</form>